  <body>
    <section id="container">
      <!-- **********************************************************************************************************************************************************
      TOP BAR CONTENT & NOTIFICATIONS
      *********************************************************************************************************************************************************** -->
      <!--header start-->
      <%- include('./modules/header') %>
      <!--header end-->

      <!-- **********************************************************************************************************************************************************
      MAIN SIDEBAR MENU
      *********************************************************************************************************************************************************** -->
      <!--sidebar start-->
      <%- include('./modules/sidebar') %>
      <!--sidebar end-->

      <!-- **********************************************************************************************************************************************************
      MAIN CONTENT
      *********************************************************************************************************************************************************** -->
      <!--main content start-->
      <section id="main-content">
        <section class="wrapper">
          <div class="row"></div>
        </section>
      </section>
      <!--main content start-->
      <section id="main-content">
        <section class="wrapper">
          <h3><i class="fa fa-angle-right"></i> Edit Event</h3>
            <% if (data.Error==true) { %>
            <div class="alert alert-danger" role="alert">
              <%= data.Message %>
            </div>
            <% } %> <% if (data.Error==false) { %>
            <div class="alert alert-success" role="alert">
              <%= data.Message %>
            </div>
            <% } %>
          <!-- BASIC FORM ELELEMNTS -->
          <div class="row mt">
            <div class="col-lg-12">
              <div class="form-panel">
                <!-- <h4 class="mb">
                  <i class="fa fa-angle-right"></i> Form Elements
                </h4> -->
                <form class="form-horizontal style-form" action="/api/admin/update-event/<%=Data._id%>" method="post" enctype="multipart/form-data">
                  <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label"
                      >Event</label
                    >
                    <div class="col-sm-10">
                      <input
                        type="text"
                        class="form-control"
                        name="event_type"
                        value="<%= Data.event_type   %>"
                        placeholder="Enter brand"
                      />
                      <br />
                    </div>
                    
                
                   

                    <label class="col-sm-2 col-sm-2 control-label"
                      >Price</label
                    >
                    <div class="col-sm-10">
                      <input
                        type="text"
                        class="form-control"
                        name="price"
                        value="<%= Data.price %>"
                        placeholder="Enter price"
                      />
                      <br>
                      </div>
                    <label class="col-sm-2 col-sm-2 control-label"
                      >Description</label
                    >
                    <div class="col-sm-10">
                      <input
                        type="text"
                        class="form-control"
                        name="description"
                        value="<%= Data.description %>"
                        placeholder="Enter description"
                      />
                      <br>
                      </div>
                    <label class="col-sm-2 col-sm-2 control-label"
                      >Image</label
                    >
                    <div class="col-sm-10">
                        <img src="<%= Data.image%>" width="80" height="50" alt="" style="margin-bottom: 10px;">
                        <input
                        type="file"
                        class="form-control"
                        name="image"
                        
                        placeholder="placeholder"
                        />
                      <br>
                      <button type="submit" class="btn btn-primary">Update Event</button>
                  </div>
                </form>
              </div>
            </div>
            <!-- col-lg-12-->
          </div>
          <!-- /row -->
        </section>
      </section>
      <!-- /MAIN CONTENT -->
      <!--main content end-->
      <!--footer start-->
      <footer class="site-footer">
        <div class="text-center">
          2024 - Event Management System
          <a href="/" class="go-top">
            <i class="fa fa-angle-up"></i>
          </a>
        </div>
      </footer>
      <!--footer end-->
    </section>

